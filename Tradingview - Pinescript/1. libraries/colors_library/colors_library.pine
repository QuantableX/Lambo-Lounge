//=============================================================================
// SELECTOR FUNCTIONS
//=============================================================================
//@function Master selector for bullish colors by theme name
//@param theme Theme name (DEFAULT, MONO, VAPOR, NEON, OCEAN, SUNSET, FOREST, CANDY, FIRE, ICE)
//@param transparency Transparency level (0-100, default 0)
//@returns Bullish color for selected theme
export bullColor(string theme, int transparency = 0) =>
    color result = switch theme
        "DEFAULT" => defaultBull(transparency)
        "MONO" => monoBull(transparency)
        "VAPOR" => vaporBull(transparency)
        "NEON" => neonBull(transparency)
        "OCEAN" => oceanBull(transparency)
        "SUNSET" => sunsetBull(transparency)
        "FOREST" => forestBull(transparency)
        "CANDY" => candyBull(transparency)
        "FIRE" => fireBull(transparency)
        "ICE" => iceBull(transparency)
        => defaultBull(transparency)
    result

//@function Master selector for bearish colors by theme name
//@param theme Theme name (DEFAULT, MONO, VAPOR, NEON, OCEAN, SUNSET, FOREST, CANDY, FIRE, ICE)
//@param transparency Transparency level (0-100, default 0)
//@returns Bearish color for selected theme
export bearColor(string theme, int transparency = 0) =>
    color result = switch theme
        "DEFAULT" => defaultBear(transparency)
        "MONO" => monoBear(transparency)
        "VAPOR" => vaporBear(transparency)
        "NEON" => neonBear(transparency)
        "OCEAN" => oceanBear(transparency)
        "SUNSET" => sunsetBear(transparency)
        "FOREST" => forestBear(transparency)
        "CANDY" => candyBear(transparency)
        "FIRE" => fireBear(transparency)
        "ICE" => iceBear(transparency)
        => defaultBear(transparency)
    result

//@function Returns trend color based on condition
//@param isBullish Boolean condition for bullish/bearish
//@param theme Theme name (DEFAULT, MONO, VAPOR, NEON, OCEAN, SUNSET, FOREST, CANDY, FIRE, ICE)
//@param transparency Transparency level (0-100, default 0)
//@returns Bullish or bearish color based on condition
export trendColor(bool isBullish, string theme = "DEFAULT", int transparency = 0) =>
    isBullish ? bullColor(theme, transparency) : bearColor(theme, transparency)

//=============================================================================
// GRADIENT UTILITIES
//=============================================================================
//@function Creates gradient color between bull and bear based on value
//@param value Current value (0-100, where 0=full bear, 100=full bull)
//@param theme Theme name
//@param transparency Transparency level (0-100, default 0)
//@returns Interpolated color
export gradientColor(float value, string theme = "DEFAULT", int transparency = 0) =>
    color bullCol = bullColor(theme, transparency)
    color bearCol = bearColor(theme, transparency)
    color.from_gradient(value, 0, 100, bearCol, bullCol)

//@function Creates RSI-style gradient (oversold=green, overbought=red)
//@param rsiValue RSI value (0-100)
//@param theme Theme name
//@param transparency Transparency level (0-100, default 0)
//@returns RSI gradient color
export rsiGradient(float rsiValue, string theme = "DEFAULT", int transparency = 0) =>
    color bullCol = bullColor(theme, transparency)
    color bearCol = bearColor(theme, transparency)
    color neutral = color.new(#787B86, transparency)
    rsiValue <= 30 ? bullCol : rsiValue >= 70 ? bearCol : neutral


//@function Returns array of theme options for input.string
//@returns Array of theme names
export getThemeOptions() =>
    array.from("DEFAULT", "MONO", "VAPOR", "NEON", "OCEAN", "SUNSET", "FOREST", "CANDY", "FIRE", "ICE")

//@function Applies transparency to any color
//@param col Source color
//@param transparency Transparency level (0-100)
//@returns Color with applied transparency
export withTransparency(color col, int transparency) =>
    color.new(col, transparency)

//@function Returns candle color based on open/close
//@param theme Theme name
//@param transparency Transparency level (0-100, default 0)
//@returns Bullish or bearish color based on candle direction
export candleColor(string theme = "DEFAULT", int transparency = 0) =>
    close >= open ? bullColor(theme, transparency) : bearColor(theme, transparency)

//@function Returns volume color based on price direction
//@param theme Theme name
//@param transparency Transparency level (0-100, default 0)
//@returns Bullish or bearish color based on close vs previous close
export volumeColor(string theme = "DEFAULT", int transparency = 0) =>
    close >= nz(close[1]) ? bullColor(theme, transparency) : bearColor(theme, transparency)
